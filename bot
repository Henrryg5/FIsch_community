// Full Discord Bot Script using Discord.js for GitHub Codespaces

require('dotenv').config();
const { Client, GatewayIntentBits, Collection } = require('discord.js');

const client = new Client({
  intents: [
    GatewayIntentBits.Guilds,
    GatewayIntentBits.GuildMessages,
    GatewayIntentBits.MessageContent,
    GatewayIntentBits.GuildMembers,
  ],
});

client.commands = new Collection();

// Simple Commands
client.on('messageCreate', async (message) => {
  if (message.author.bot) return;

  if (message.content.toLowerCase() === '!ping') {
    await message.reply('Pong! 🏓');
  }

  if (message.content.toLowerCase() === '!server') {
    await message.reply(`Server Name: ${message.guild.name}\nTotal Members: ${message.guild.memberCount}`);
  }

  if (message.content.toLowerCase() === '!user') {
    await message.reply(`Your Username: ${message.author.tag}\nYour ID: ${message.author.id}`);
  }
});

// Slash Commands
client.on('interactionCreate', async (interaction) => {
  if (!interaction.isCommand()) return;

  const { commandName } = interaction;

  if (commandName === 'hello') {
    await interaction.reply('Hello there! 👋');
  }

  if (commandName === 'userinfo') {
    await interaction.reply(`Your Username: ${interaction.user.tag}\nYour ID: ${interaction.user.id}`);
  }
});

// Event when the bot is ready
client.once('ready', () => {
  console.log(`${client.user.tag} is online and ready!`);
});

// Login with token
client.login(process.env.DISCORD_TOKEN);

// .env file should contain: DISCORD_TOKEN=MTM0MTE0NTczODU2MTg0NzQxMA.GBxfmd.7ueRH4Q6UUB5n3fNvsSO-BLNLtiHuQI8kKfZLU

